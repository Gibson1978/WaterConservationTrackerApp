<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!--THIS IS THE LINE IN BETWEEN SECTION-->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDDDDD" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appearance"
            android:drawableLeft="@android:drawable/ic_menu_gallery"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy and Security"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help and Support"
            android:drawableLeft="@android:drawable/ic_dialog_info"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            android:textSize="16sp" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDDDDD" android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connections"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="start"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_air_selangor"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Air Selangor Logo"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Connect to Air Selangor"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/switchAirSelangor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDDDDD" />

        <TextView
            android:id="@+id/termsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>